{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/abstractions",
        "packages/common",
        "packages/cordova",
        "packages/electron",
        "packages/web"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:tsc",
        "lint:eslint": "eslint ./packages/*/src/**/*.ts",
        "lint:prettier": "prettier --check .",
        "lint:tsc": "npm run build --workspaces",
        "test": "npm run test --workspaces --if-present",
        "typedoc": "npm run typedoc --workspaces"
    },
    "devDependencies": {
        "@js-soft/eslint-config-ts": "^1.6.2",
        "@js-soft/license-check": "^1.0.6",
        "@types/node": "^18.11.18",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "^8.32.0",
        "prettier": "^2.8.3",
        "terser-webpack-plugin": "5.3.6",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.2",
        "typedoc": "^0.23.24",
        "typedoc-plugin-markdown": "^3.14.0",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    }
}
