{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/abstractions",
        "packages/common",
        "packages/cordova",
        "packages/electron",
        "packages/web"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:tsc",
        "lint:eslint": "eslint ./packages/*/src/**/*.ts",
        "lint:prettier": "prettier --check .",
        "lint:tsc": "npm run build --workspaces",
        "test": "npm run test --workspaces --if-present",
        "typedoc": "npm run typedoc --workspaces"
    },
    "devDependencies": {
        "@js-soft/eslint-config-ts": "^1.6.0",
        "@js-soft/license-check": "^1.0.4",
        "@types/node": "^18.6.3",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "^8.21.0",
        "prettier": "^2.7.1",
        "terser-webpack-plugin": "5.3.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.0.0",
        "typedoc": "^0.23.8",
        "typedoc-plugin-markdown": "^3.13.4",
        "typescript": "^4.7.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    }
}
